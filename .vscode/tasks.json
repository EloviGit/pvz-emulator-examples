{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fexec-charset=GBK",
                "-O3",
                "-o",
                "dest/bin/${fileBasenameNoExtension}",
                "${file}",
                "-Ilib",
                "-Ilib/lib",
                "-Llib/build",
                "-lpvzemu",
                "-Wfatal-errors"
            ],
        },
        {
            "label": "run",
            "type": "shell",
            "command": "cd dest; ./bin/${fileBasenameNoExtension} > ${fileBasenameNoExtension}.csv; cd ..",
            "dependsOn": [
                "compile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}