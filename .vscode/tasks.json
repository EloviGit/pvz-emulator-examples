{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildLib",
            "type": "shell",
            "command": "cd lib/build; cmake -G Ninja -DCMAKE_BUILD_TYPE=RelWithDebugInfo ..; ninja; cd ../../"
        },
        {
            "label": "compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-static",
                "-O3",
                "-o",
                "dest/bin/${fileBasenameNoExtension}",
                "${file}",
                "-I.",
                "-isystem",
                "lib",
                "-isystem",
                "lib/lib",
                "-Llib/build",
                "-lpvzemu",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-Wcast-align",
                "-Wcast-qual",
                "-Wconversion",
                "-Wctor-dtor-privacy",
                "-Wdisabled-optimization",
                "-Wformat=2",
                "-Winit-self",
                "-Wlogical-op",
                "-Wmissing-include-dirs",
                "-Wnoexcept",
                "-Wold-style-cast",
                "-Woverloaded-virtual",
                "-Wredundant-decls",
                "-Wstrict-null-sentinel",
                "-Wswitch-default",
                "-Wswitch-enum",
                "-Wsign-compare",
                "-Wsign-promo",
                "-Wundef",
                "-Wunused-variable",
            ],
            "dependsOn": [
                "buildLib"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "run",
            "type": "shell",
            "command": "cd dest; ./bin/${fileBasenameNoExtension}; cd ..",
            "dependsOn": [
                "compile"
            ],
        },
    ]
}