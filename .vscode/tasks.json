{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildLib",
            "type": "shell",
            "command": "cd ../PvZ-Emulator/build; ninja; cd ../../min-pvz-emulator"
        },
        {
            "label": "compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-O3",
                "-o",
                "dest/bin/${fileBasenameNoExtension}",
                "${file}",
                "-I.",
                "-I../PvZ-Emulator",
                "-I../PvZ-Emulator/lib",
                "-L../PvZ-Emulator/build",
                "-lpvzemu",
                "-Wall",
                "-Wextra",
                "-Wno-class-memaccess",
                "-Wno-sign-compare",
                "-Werror",
                "-Wfatal-errors"
            ],
            "dependsOn": [
                "buildLib"
            ],
        },
        {
            "label": "run",
            "type": "shell",
            "command": "cd dest; ./bin/${fileBasenameNoExtension}; cd ..",
            "dependsOn": [
                "compile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
    ]
}